.nested-fields
  %hr
  .text-right
  .row
    .col-4
      = f.input :user_id, label: 'Usuario', as: :select, collection: User.all - [current_user], input_html: { class: 'selectize responsible' }, label_method: -> (u) { u.email }
    .col-4
      = f.input :role, label: 'Rol', as: :select, collection: Participant.roles, input_html: { class: 'selectize role' }, value_method: -> (r) { r[1] }
    .col-4.text-left
      .mt-2
      = link_to_remove_association f, class: 'btn btn-warning btn-sm btn-flat mt-4' do
        .fas.fa-trash